<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>WhaleWatch | Home</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #001d2d;
      color: #ffffff;
      margin: 0;
      padding: 0;
    }
    nav {
      background-color: #001520;
      padding: 1em;
      text-align: center;
      position: sticky;
      top: 0;
    }
    nav a {
      color: #00ffee;
      margin: 0 15px;
      text-decoration: none;
      font-weight: bold;
    }
    .hero {
      text-align: center;
      padding: 6em 2em 3em;
      background-color: #002b3f;
    }
    .hero h1 {
      font-size: 2.8em;
      color: #00ffee;
      margin-bottom: 0.3em;
    }
    .hero p {
      font-size: 1.25em;
      color: #cccccc;
    }
    .section {
      max-width: 800px;
      margin: 2.5em auto;
      padding: 1.5em;
    }
    .section h2 {
      color: #00ffee;
      font-size: 1.5em;
      margin-bottom: 0.5em;
    }
    .section p {
      color: #dddddd;
    }
    .card {
      background-color: #003850;
      padding: 1em;
      border-radius: 6px;
      margin-bottom: 1em;
    }
    .bar-container {
      background-color: #003850;
      border-radius: 5px;
      height: 20px;
      width: 100%;
      margin: 0.5em 0;
    }
    .bar {
      height: 100%;
      background-color: #00ffee;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <nav>
    <a href="index.html">Home</a>
    <a href="learn.html">Learn</a>
    <a href="simulate.html">Live Data</a>
  </nav>

  <div class="hero">
    <h1>üêã WhaleWatch.ai</h1>
    <p>Real-time sonar on big money moves.</p>
  </div>

  <div class="section" id="whaleMeter">
    <h2>üì∂ Whale Meter</h2>
    <p>Total Premium Traded Today:</p>
    <div class="bar-container">
      <div class="bar" id="whaleBar" style="width: 0%"></div>
    </div>
    <p id="whaleTotal">$0</p>
  </div>

  <div class="section" id="leaderboardSection">
    <h2>üèÜ Leaderboard (Top 10 by Premium)</h2>
    <div id="leaderboardList">Loading...</div>
  </div>

  <div class="section" id="whaleFeed">
    <h2>üê≥ Latest Whale Trades</h2>
    <div id="whaleList">Loading...</div>
  </div>

  <script>
    // Load whale trades
    fetch("whales.json")
      .then(res => res.json())
      .then(data => {
        const trades = data.whale_trades || [];
        const container = document.getElementById("whaleList");

        if (!trades.length) {
          container.innerHTML = "No trades available.";
          return;
        }

        const total = trades.reduce((sum, t) => sum + (t.premium || 0), 0);
        const maxPremium = 10000000; // set your own scale
        const percent = Math.min(100, (total / maxPremium) * 100);

        document.getElementById("whaleBar").style.width = percent + "%";
        document.getElementById("whaleTotal").textContent = "$" + total.toLocaleString();

        container.innerHTML = trades.slice(0, 5).map(t => `
          <div class="card">
            <strong>${t.symbol}</strong> - ${t.type}<br>
            Strike: $${t.strike}<br>
            Exp: ${t.expiration}<br>
            Premium: $${Number(t.premium).toFixed(2)}
          </div>
        `).join("");
      });

    // Load leaderboard
    fetch("leaderboard.json")
      .then(res => res.json())
      .then(data => {
        const top = data.top_10 || {};
        const board = document.getElementById("leaderboardList");

        if (!Object.keys(top).length) {
          board.innerHTML = "No leaderboard data.";
          return;
        }

        board.innerHTML = Object.entries(top).map(([symbol, info], i) => `
          <div class="card">
            <strong>${i + 1}. ${symbol}</strong><br>
            Trades: ${info.count}<br>
            Total Premium: $${Number(info.total_premium).toLocaleString()}
          </div>
        `).join("");
      });
  </script>
</body>
</html>
