    <input type="text" id="expiration" placeholder="e.g. 05/17/2025" />

    <label for="premium">Premium Collected ($):</label>
    <input type="number" id="premium" placeholder="e.g. 1.50" step="0.01" />

    <button onclick="simulateTrade()">ðŸ’¥ Simulate Trade</button>

    <div id="simulation-result"></div>
  </section>

  <script>
    function simulateTrade() {
      const symbol = document.getElementById("symbol").value;
      const type = document.getElementById("type").value;
      const strike = parseFloat(document.getElementById("strike").value);
      const expiration = document.getElementById("expiration").value;
      const premium = parseFloat(document.getElementById("premium").value);

      if (isNaN(strike) || isNaN(premium) || !expiration) {
        document.getElementById("simulation-result").innerHTML =
          "<div>Please fill out all fields correctly.</div>";
        return;
      }

      const contractSize = 100;
      const totalPremium = (premium * contractSize).toFixed(2);

      let result = `<div>You simulated selling a <strong>${type}</strong> on <strong>${symbol}</strong> with a $${strike} strike price expiring on ${expiration}.<br><br>`;
      result += `You would collect <strong>$${totalPremium}</strong> in premium upfront.`;

      if (type === "Put") {
        result += `<br><br>If ${symbol} stays above $${strike}, you keep the cash âœ….<br>`;
        result += `If it drops below, you'll be assigned the stock at $${strike}.`;
      } else {
        result += `<br><br>If ${symbol} rises above $${strike}, you may be forced to sell it at the strike price.<br>`;
        result += `If not, you just keep the premium âœ….`;
      }

      result += `</div>`;
      document.getElementById("simulation-result").innerHTML = result;
    }
  </script>
