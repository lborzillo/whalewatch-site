  <div class="container">
    <h1>ðŸ“Š Options Trade Simulator</h1>
    <p>Practice selling puts and calls like a pro â€” using real whale data.</p>

    <form id="simForm">
      <label for="symbol">Symbol:</label>
      <select id="symbol"></select>

      <label for="type">Type:</label>
      <select id="type">
        <option value="PUT">Put</option>
        <option value="CALL">Call</option>
      </select>

      <label for="strike">Strike Price ($):</label>
      <select id="strike"></select>

      <label for="expiration">Expiration Date:</label>
      <select id="expiration"></select>

      <label for="premium">Premium Collected ($ per share):</label>
      <select id="premium"></select>
      <small id="premiumInfo">Premium data sourced from real whale trades.</small>

      <button type="submit">ðŸ’¥ Simulate Trade</button>
    </form>

    <div id="output" class="result" style="display:none;"></div>
  </div>

  <script>
    let whaleData = [];

    fetch("../whales.json")
      .then(res => res.json())
      .then(data => {
        whaleData = data.whale_trades;
        const symbols = [...new Set(whaleData.map(t => t.symbol))];
        const symbolSelect = document.getElementById("symbol");
        symbols.forEach(s => {
          const opt = document.createElement("option");
          opt.value = s;
          opt.textContent = s;
          symbolSelect.appendChild(opt);
        });
        updateDropdowns();
      });

    document.getElementById("symbol").addEventListener("change", updateDropdowns);
    document.getElementById("type").addEventListener("change", updateDropdowns);

    function updateDropdowns() {
      const symbol = document.getElementById("symbol").value;
      const type = document.getElementById("type").value;

      const filtered = whaleData.filter(t => t.symbol === symbol && t.type === type);

      const strikes = [...new Set(filtered.map(t => t.strike))];
      const expirations = [...new Set(filtered.map(t => t.expiration))];

      populateDropdown("strike", strikes);
      populateDropdown("expiration", expirations);

      // Wire up event handlers for premium lookup
      document.getElementById("strike").addEventListener("change", updatePremium);
      document.getElementById("expiration").addEventListener("change", updatePremium);

      // Clear premium field
      populateDropdown("premium", []);
      document.getElementById("premiumInfo").textContent = '';
    }

    function updatePremium() {
      const symbol = document.getElementById("symbol").value;
      const type = document.getElementById("type").value;
      const strike = parseFloat(document.getElementById("strike").value);
      const expiration = document.getElementById("expiration").value;

      const match = whaleData.find(t =>
        t.symbol === symbol &&
        t.type === type &&
        t.strike === strike &&
        t.expiration === expiration
      );

      const premiumDropdown = document.getElementById("premium");
      premiumDropdown.innerHTML = "";

      if (match) {
        const opt = document.createElement("option");
        opt.value = match.last_price.toFixed(2);
        opt.textContent = match.last_price.toFixed(2);
        premiumDropdown.appendChild(opt);

        document.getElementById("premiumInfo").textContent =
          `ðŸ’¡ Based on whale trade: ${strike} ${type} on ${symbol} expiring ${expiration} with $${match.last_price.toFixed(2)} premium (${match.open_interest} open interest)`;
      } else {
        document.getElementById("premiumInfo").textContent = "No matching whale trade found.";
      }
    }

    function populateDropdown(id, values) {
      const el = document.getElementById(id);
      el.innerHTML = "";
      values.sort((a, b) => a - b).forEach(v => {
        const opt = document.createElement("option");
        opt.value = v;
        opt.textContent = v;
        el.appendChild(opt);
      });
    }

    document.getElementById("simForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const symbol = document.getElementById("symbol").value;
      const type = document.getElementById("type").value;
      const strike = document.getElementById("strike").value;
      const expiration = document.getElementById("expiration").value;
      const premium = document.getElementById("premium").value;

      const totalPremium = (parseFloat(premium) * 100).toFixed(2);
      const output = document.getElementById("output");

      output.innerHTML = `
        <strong>âœ… You simulated selling a ${type} on ${symbol}.</strong>
        <ul>
          <li><strong>Strike:</strong> $${strike}</li>
          <li><strong>Premium Collected:</strong> $${totalPremium} (for 1 contract)</li>
          <li><strong>Expiration Date:</strong> ${expiration}</li>
        </ul>
        <em>This is premium harvesting in action â€” income now, stock later (maybe).</em>
      `;
      output.style.display = "block";
    });
  </script>
