  <h1>üìä Options Trade Simulator</h1>
  <p style="text-align:center;">Practice selling puts and calls like a pro ‚Äî using real whale data.</p>

  <section id="simulator">
    <div class="form-group">
      <label for="symbol">Symbol:</label>
      <select id="symbol">
        <option value="NVDA">NVDA</option>
        <option value="AAPL">AAPL</option>
        <option value="TSLA">TSLA</option>
      </select>
    </div>

    <div class="form-group">
      <label for="type">Type:</label>
      <select id="type">
        <option value="PUT">Put</option>
        <option value="CALL">Call</option>
      </select>
    </div>

    <div class="form-group">
      <label for="strike">Strike Price ($):</label>
      <input type="text" id="strike" placeholder="e.g. 105">
    </div>

    <div class="form-group">
      <label for="expiration">Expiration Date:</label>
      <input type="date" id="expiration">
    </div>

    <div class="form-group">
      <label for="premium">Premium Collected ($):</label>
      <input type="text" id="premium" placeholder="e.g. 1.50">
    </div>

    <div class="form-group">
      <button onclick="simulateTrade()">üí• Simulate Trade</button>
      <button onclick="resetForm()">üîÅ Reset</button>
    </div>

    <div id="result"></div>
  </section>

  <script>
    function simulateTrade() {
      const symbol = document.getElementById("symbol").value;
      const typeRaw = document.getElementById("type").value;
      const type = typeRaw.charAt(0) + typeRaw.slice(1).toLowerCase();
      const strike = document.getElementById("strike").value;
      const expiration = document.getElementById("expiration").value;
      const premium = document.getElementById("premium").value;

      if (!strike || !expiration || !premium) {
        document.getElementById("result").innerHTML = "<strong>Please fill out all fields.</strong>";
        return;
      }

      const formatted = `
        üìù You simulated a <strong>${type}</strong> on <strong>${symbol}</strong> at 
        <strong>$${strike}</strong>, collecting <strong>$${premium}</strong> in premium.<br>
        ‚è≥ It expires on <strong>${expiration}</strong>.<br><br>
        üí° If the stock stays above (Call) or below (Put) the strike ‚Äî you keep the cash!
      `;
      document.getElementById("result").innerHTML = formatted;
    }

    function resetForm() {
      document.getElementById("strike").value = "";
      document.getElementById("expiration").value = "";
      document.getElementById("premium").value = "";
      document.getElementById("result").innerHTML = "";
    }
  </script>
